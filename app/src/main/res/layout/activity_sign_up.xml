<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moonlit_asteroid_gradient"
    tools:context=".SignUp" android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:elevation="10dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="32dp"
                android:fontFamily="serif"
                android:text="Get Started..!!"
                android:textColor="@color/primary"
                android:textSize="23sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:layout_marginEnd="20dp"
                android:text="Sign Up"
                android:elevation="10dp"
                android:textColor="@color/primary"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="serif"
                android:text="@string/signdetails"
                android:textColor="@color/primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameLayout"

                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Name"
                app:boxStrokeColor="@color/primary"
                android:textColorHint="@color/primary"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/primary"
                app:errorEnabled="true"
                android:backgroundTint="@color/white"
                app:hintEnabled="true"
                app:hintTextColor="@color/primary"
                app:startIconDrawable="@drawable/custom_person"
                app:startIconTint="@color/primary">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:paddingBottom="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/white"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/emailLayout"
                android:layout_height="67dp"

                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxBackgroundMode="outline"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:clipToPadding="false"
                android:elevation="10dp"
                android:hint="Email"
                android:layout_marginEnd="20dp"
                android:textColorHint="@color/primary"
                app:boxStrokeColor="@color/primary"
                app:endIconMode="clear_text"
                app:endIconTint="@color/primary"
                app:errorEnabled="true"
                app:hintTextColor="@color/primary"


                app:startIconDrawable="@drawable/email"
                app:startIconTint="@color/primary">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="20dp"
                    android:textColor="@color/primary"

                    android:paddingEnd="50dp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/primary"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_gravity="center"
                app:boxBackgroundMode="outline"
                android:id="@+id/pasLayout"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:clipToPadding="false"
                android:elevation="10dp"
                android:hint="Password"

                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                android:layout_marginEnd="20dp"
                android:textColorHint="@color/primary"
                app:boxStrokeColor="@color/primary"
                app:counterEnabled="false"
                app:counterMaxLength="16"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/primary"
                app:errorEnabled="true"
                app:hintTextColor="@color/primary"


                app:startIconDrawable="@drawable/lock"
                app:startIconTint="@color/primary">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    android:paddingEnd="50dp"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="20dp"
                    android:textColor="@color/primary"

                    android:inputType="textPassword"
                    android:textColorHint="@color/primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:id="@+id/cnfpassLayout"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                android:layout_marginStart="20dp"
                android:elevation="10dp"
                android:hint="Confirm Password"
                android:layout_marginEnd="20dp"
                android:textColorHint="@color/primary"
                app:boxStrokeColor="@color/primary"
                app:counterEnabled="true"
                app:counterMaxLength="16"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/primary"
                app:errorEnabled="true"
                app:hintTextColor="@color/primary"

                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/lock"
                app:startIconTint="@color/primary">

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/cnfpass"
                    android:inputType="textPassword"
                    android:paddingEnd="50dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/primary"

                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="serif"
                android:text=""
                android:textColorLink="@color/primary"
                app:buttonIconTint="@color/white"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary"
                android:textSize="15sp"
                android:textStyle="bold"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/roundbtn"
                android:text="Sign Up "
                android:elevation="10dp"
                android:onClick="signup"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:indeterminateTint="@color/primary"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/noacc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="20dp"
                android:textColorLink="@color/primary"
                android:fontFamily="serif"
                android:onClick="register"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textColor="@color/primary" />

        </LinearLayout>


    </ScrollView>
    </LinearLayout>
